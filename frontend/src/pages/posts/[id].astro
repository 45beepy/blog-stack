---
// 1. Import the marked library
import { marked } from 'marked';

// Fetch your live Render API
const response = await fetch("https://blog-api-grud.onrender.com/api/posts");
const posts = await response.json();
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>My Ultra-Light Blog</title>
  </head>
  <body>
    <header>
      <h1>My Zero-JS Blog</h1>
      <p>Lightning fast. Zero bloat.</p>
    </header>

    <main>
      {posts.map((post) => (
        <article class="post">
          <a href={`/posts/${post.id}`}>
            <h2>{post.title}</h2>
          </a>
          
          {/* Parse the content and add a class so we can style the links inside it */}
          <div class="markdown-preview" set:html={marked.parse(post.content)}></div>
          
        </article>
      ))}
    </main>
  </body>
</html>

<style>
  :root {
    --bg-color: #0f111a;
    --text-color: #8f93a2;
    --heading-color: #fffffe;
    --accent-color: #c792ea;
    --card-bg: #1a1c23;
    --border-color: #292d3e;
    --glow: 0 0 10px rgba(199, 146, 234, 0.2);
  }

  body {
    font-family: 'Fira Code', 'Courier New', Courier, monospace;
    background-color: var(--bg-color);
    color: var(--text-color);
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    line-height: 1.7;
  }

  header {
    margin-bottom: 4rem;
    border-bottom: 2px dashed var(--border-color);
    padding-bottom: 2rem;
  }

  h1 {
    color: var(--heading-color);
    font-size: 3rem;
    margin: 0 0 0.5rem 0;
    text-transform: lowercase;
    text-shadow: var(--glow);
  }

  header p {
    color: var(--accent-color);
    margin: 0;
    font-size: 1.2rem;
  }

  /* Homepage Card Styles */
  .post {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-left: 4px solid var(--accent-color);
    padding: 2rem;
    margin-bottom: 2rem;
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  .post:hover {
    transform: translateX(10px);
    border-color: var(--accent-color);
    box-shadow: var(--glow);
  }

  .post a {
    text-decoration: none;
  }

  .post h2 {
    color: var(--heading-color);
    margin-top: 0;
    font-size: 1.8rem;
    transition: color 0.2s;
  }
  
  .post a:hover h2 {
    color: var(--accent-color);
  }

  /* Style the injected Markdown tags */
  :global(pre) {
    background-color: #1e1e1e;
    color: #d4d4d4;
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    border: 1px solid #333;
    margin: 1.5rem 0;
  }

  :global(code) {
    font-family: 'Fira Code', 'Courier New', monospace;
    background-color: #2d2d2d;
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
  }

  :global(pre code) {
    background-color: transparent;
    padding: 0;
  }

  :global(.markdown-preview a) {
    color: var(--accent-color);
    text-decoration: none;
  }
  
  :global(.markdown-preview a:hover) {
    text-decoration: underline;
  }
</style>
