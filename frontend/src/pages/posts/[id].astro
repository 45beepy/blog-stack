---
import { marked } from 'marked';

export async function getStaticPaths() {
  const response = await fetch("https://blog-api-grud.onrender.com/api/posts");
  const posts = await response.json();

  return posts.map((post) => {
    return {
      params: { id: post.id.toString() },
      props: { post },
    };
  });
}

const { post } = Astro.props;
const parsedContent = marked.parse(post.content);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{post.title} | My Zero-JS Blog</title>
    <link rel="icon" type="image/png" href="/favicon.png" />
  </head>
  <body>
    <main>
      <a href="/" class="back-link">&larr; Back to Home</a>
      
      <article class="post-content">
        <h1>{post.title}</h1>
        
        {/* Inject the fully parsed Markdown here! */}
        <div set:html={parsedContent}></div>
        
      </article>
    </main>
  </body>
</html>

<style>
  :root {
    --bg-color: #0f111a;
    --text-color: #8f93a2;
    --heading-color: #fffffe;
    --accent-color: #c792ea;
  }

  body {
    font-family: 'Fira Code', 'Courier New', Courier, monospace;
    background-color: var(--bg-color);
    color: var(--text-color);
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    line-height: 1.7;
  }

  .back-link {
    color: var(--accent-color);
    text-decoration: none;
    font-size: 1.1rem;
    display: inline-block;
    margin-bottom: 2rem;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  h1 {
    color: var(--heading-color);
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    border-bottom: 1px solid #292d3e;
    padding-bottom: 1rem;
  }

  :global(pre) {
    background-color: #1e1e1e;
    color: #d4d4d4;
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    border: 1px solid #333;
    margin: 1.5rem 0;
  }

  :global(code) {
    font-family: 'Fira Code', 'Courier New', monospace;
    background-color: #2d2d2d;
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
  }

  :global(pre code) {
    background-color: transparent;
    padding: 0;
  }
  
  :global(.post-content a) {
    color: var(--accent-color);
    text-decoration: none;
  }
  
  :global(.post-content a:hover) {
    text-decoration: underline;
  }

  /* Mobile Optimization */
  @media (max-width: 600px) {
    body {
      padding: 1.2rem;
    }
    .back-link {
      margin-bottom: 1.5rem;
      font-size: 1rem;
    }
    h1 {
      font-size: 1.8rem;
      margin-bottom: 1rem;
    }
    :global(pre) {
      padding: 0.8rem;
      font-size: 0.85rem;
      margin: 1rem 0;
    }
  }
</style>
