---
// Fetch your live Render API
const response = await fetch("https://blog-api-grud.onrender.com/api/posts");
const posts = await response.json();
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Blog</title>
    <link rel="icon" type="image/png" href="/favicon.png" />
  </head>
  <body>
    <header>
      <h1>Sonicnucklesss's Blog</h1>
      <p>superfast Blog Site</p>
    </header>

    <main>
      {posts.map((post) => (
        <article class="post">
          <a href={`/posts/${post.id}`}>
            <h2>{post.title}</h2>
          </a>
          
          <p class="preview-text">
            {post.content ? post.content.replace(/[#*_\[\]()]/g, '').substring(0, 150) + "..." : "No preview available."}
          </p>
          
          <a href={`/posts/${post.id}`} class="read-more">Read full article &rarr;</a>
        </article>
      ))}
    </main>
  </body>
</html>

<style>
  /* Unified Dark Theme Variables */
  :root {
    --bg-color: #0f111a;
    --text-color: #8f93a2;
    --heading-color: #fffffe;
    --accent-color: #c792ea;
    --card-bg: #1a1c23;
    --border-color: #292d3e;
    --glow: 0 0 10px rgba(199, 146, 234, 0.2);
  }

  body {
    font-family: 'Fira Code', 'Courier New', Courier, monospace;
    background-color: var(--bg-color);
    color: var(--text-color);
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    line-height: 1.7;
  }

  header {
    margin-bottom: 4rem;
    border-bottom: 2px dashed var(--border-color);
    padding-bottom: 2rem;
  }

  h1 {
    color: var(--heading-color);
    font-size: 3rem;
    margin: 0 0 0.5rem 0;
    text-transform: lowercase;
    text-shadow: var(--glow);
  }

  header p {
    color: var(--accent-color);
    margin: 0;
    font-size: 1.2rem;
  }

  /* Homepage Card Styles */
  .post {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-left: 4px solid var(--accent-color);
    padding: 2rem;
    margin-bottom: 2rem;
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  /* Cool terminal hover effect */
  .post:hover {
    transform: translateX(10px);
    border-color: var(--accent-color);
    box-shadow: var(--glow);
  }

  .post a {
    text-decoration: none;
  }

  .post h2 {
    color: var(--heading-color);
    margin-top: 0;
    font-size: 1.8rem;
    transition: color 0.2s;
  }
  
  .post a:hover h2 {
    color: var(--accent-color);
  }

  .preview-text {
    color: var(--text-color);
    margin-bottom: 1.5rem;
  }

  .read-more {
    color: var(--accent-color);
    text-decoration: none;
    font-weight: bold;
    font-size: 0.9rem;
    border-bottom: 1px dashed transparent;
    transition: border-color 0.2s;
  }

  .read-more:hover {
    border-color: var(--accent-color);
  }

  /* Mobile Optimization */
  @media (max-width: 600px) {
    body {
      padding: 1.2rem;
    }
    header {
      margin-bottom: 2rem;
      padding-bottom: 1rem;
    }
    h1 {
      font-size: 2.2rem;
    }
    header p {
      font-size: 1rem;
    }
    .post {
      padding: 1.2rem;
      margin-bottom: 1.5rem;
    }
    .post h2 {
      font-size: 1.5rem;
    }
  }
</style>
