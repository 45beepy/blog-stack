---
// 1. FRONTMATTER: This code runs on the server.
// It reaches out to your .NET Minimal API to grab the data.
const response = await fetch("http://localhost:5276/api/posts");
const posts = await response.json();
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>My Ultra-Light Blog</title>
    <style>
      body { font-family: system-ui, sans-serif; max-width: 800px; margin: 0 auto; padding: 2rem; }
      .post { border-bottom: 1px solid #ccc; padding-bottom: 1rem; margin-bottom: 1rem; }
    </style>
  </head>
  <body>
    <h1>My Zero-JS Blog</h1>
    
    <div class="post-list">
      {/* Astro uses JSX-like syntax to map over the array we fetched above */}
      {posts.map((post) => (
        <article class="post">
          <h2>{post.title}</h2>
          <p>{post.content}</p>
        </article>
      ))}
    </div>
  </body>
</html>
